// Configure tool-specific properties.
// "customizations": {},
// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
// "remoteUser": "root"

{
  "name": "Flutter Dev Env",
  "image": "ghcr.io/cirruslabs/flutter:latest",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:latest": {}, // docker
    "ghcr.io/tailscale/codespace/tailscale": {}, // tailscale
    "ghcr.io/Evit15/devcontainer-features/adb-fastboot:1": {} // adb
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "Dart-Code.flutter",
        "ms-vscode-remote.remote-containers"
      ],
      "settings": {
        "editor.fontSize": 10,
        "terminal.integrated.fontSize": 10,
        "chat.editor.fontSize": 10
      }
    }
  }
}